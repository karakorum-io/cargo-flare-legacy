
RewriteEngine On
RewriteCond %{SERVER_PORT} !=443
RewriteCond %{HTTP_HOST} ^http://localhost/freightdragon/$ [NC]
RewriteRule ^$ http://localhost/freightdragon/%{REQUEST_URI} [R,L]

DirectoryIndex index.php
<IfModule mod_rewrite.c>
    RewriteEngine On
    #Options +Followsymlinks
    #RewriteBase /
    #RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{HTTPS} !=on
    RewriteRule ^(registration)$ https://www.freightdragon.info/dev$1 [R=301,L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

    #RewriteRule ^cp/styles.css$     styles/styles.css
    #RewriteRule ^styles.css$        styles/styles.css
</IfModule>
